<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GenerateInvoice">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:text="Add services to Invoice"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Service Name"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="10dp"
                android:id="@+id/service_name"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_assignment_black_24dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Qantity"
                android:textSize="14sp"

                android:drawableStart="@drawable/quantity"
                android:drawablePadding="10dp"
                android:id="@+id/service_quantity"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/quantity" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="10dp"

            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Price / Quantity"
                android:drawableStart="@drawable/rupees_colored"
                android:drawablePadding="10dp"
                android:textSize="14sp"

                android:id="@+id/service_price"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/rupees_colored" />
        </android.support.design.widget.TextInputLayout>
        <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=" Add to Invoice"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/add_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
      android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:background="@drawable/buttonstyle"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Preview and Send"
            android:gravity="end"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:layout_gravity="end"
            android:id="@+id/preview_send"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/ic_fast_forward_black_24dp"
            android:drawableRight="@drawable/ic_fast_forward_black_24dp" />



    </LinearLayout>



</LinearLayout>